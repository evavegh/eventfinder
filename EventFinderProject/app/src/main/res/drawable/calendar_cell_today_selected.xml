<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorBackground" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:top="0dp"
        android:gravity="center">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="?colorAccent" />
            <solid android:color="@color/caldroid_holo_blue_light" />
            <size
                android:height="30sp"
                android:width="30sp" />
        </shape>
    </item>

</layer-list>